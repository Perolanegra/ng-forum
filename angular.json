{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-forum": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ng-forum",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.webmanifest"
            ],
            "styles": [
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "./node_modules/ngx-toastr/toastr.css",
              "src/styles.scss",
              "node_modules/@syncfusion/ej2-base/styles/material.css",
              "node_modules/@syncfusion/ej2-icons/styles/material.css",
              "node_modules/@syncfusion/ej2-buttons/styles/material.css",
              "node_modules/@syncfusion/ej2-splitbuttons/styles/material.css",
              "node_modules/@syncfusion/ej2-inputs/styles/material.css",
              "node_modules/@syncfusion/ej2-lists/styles/material.css",
              "node_modules/@syncfusion/ej2-navigations/styles/material.css",
              "node_modules/@syncfusion/ej2-popups/styles/material.css",
              "node_modules/@syncfusion/ej2-richtexteditor/styles/material.css"
            ],
            "scripts": [
              "./node_modules/crypto-js/crypto-js.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "ngsw-config.json"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ng-forum:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "ng-forum:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ng-forum:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.webmanifest"
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "src/styles.scss",
              "node_modules/@syncfusion/ej2-base/styles/material.css",
              "node_modules/@syncfusion/ej2-icons/styles/material.css",
              "node_modules/@syncfusion/ej2-buttons/styles/material.css",
              "node_modules/@syncfusion/ej2-splitbuttons/styles/material.css",
              "node_modules/@syncfusion/ej2-inputs/styles/material.css",
              "node_modules/@syncfusion/ej2-lists/styles/material.css",
              "node_modules/@syncfusion/ej2-navigations/styles/material.css",
              "node_modules/@syncfusion/ej2-popups/styles/material.css",
              "node_modules/@syncfusion/ej2-richtexteditor/styles/material.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "ng-forum:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "ng-forum:serve:production"
            }
          }
        }
      }
    },
    "dinamic-form-inputs": {
      "projectType": "library",
      "root": "projects/dinamic-form-inputs",
      "sourceRoot": "projects/dinamic-form-inputs/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/dinamic-form-inputs/tsconfig.lib.json",
            "project": "projects/dinamic-form-inputs/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/dinamic-form-inputs/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/dinamic-form-inputs/src/test.ts",
            "tsConfig": "projects/dinamic-form-inputs/tsconfig.spec.json",
            "karmaConfig": "projects/dinamic-form-inputs/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/dinamic-form-inputs/tsconfig.lib.json",
              "projects/dinamic-form-inputs/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ng-forum"
}